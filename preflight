#!/bin/sh
# Script for calling multiple routines on a project, typically prior to committing to a repository.

# initial normalization pass
psfnormalize -p checkfix=fix source/*.ufo

# sync metadata to other UFOs
psfsyncmeta source/*Regular.ufo

# [re-]build woff metadata file
psfmakewoffmetadata -n Harmattan -i org.sil.fonts source/*-Regular.ufo
